	definir num, i Como Entero
	Escribir "ESCRIBE UN NUMERO"
	Leer num
	Escribir "CONTADOR"
	i=1
	mientras i<= num Hacer
		Escribir "los numeros son:",i
		i=i+1
	FinMientras
	i=num
	Escribir "AHORA EN CONTEO REGRESIVO"
	mientras i>=1 Hacer
		Escribir "los numeros son:",i
		i=i-1
